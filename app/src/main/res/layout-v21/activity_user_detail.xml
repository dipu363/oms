<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/app_background_white"
    tools:context=".users.UserDetailActivity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_view"
            android:background="@color/app_background_white"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <FrameLayout
                android:layout_gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/profile_image_id"
                    android:scaleType="fitXY"
                    android:padding="5dp"
                    android:layout_gravity="center"
                    android:src="@drawable/userphoto"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />

            </FrameLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/user_detail_userfnameid"
                    android:textSize="32sp"
                    android:textColor="@color/text_color_green"
                    android:text="Giyas"
                    android:textStyle="bold"
                    android:layout_marginRight="2.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2.5dp" />
                <TextView
                    android:id="@+id/user_detail_userlnameid"
                    android:textSize="32sp"
                    android:textColor="@color/text_color_green"
                    android:text="Uddin"
                    android:textStyle="bold"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2.5dp" />
            </LinearLayout>

            <LinearLayout
                android:layout_marginTop="20dp"
                android:weightSum="5"
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_task_alt_40"
                    android:layout_width="0dp"
                    android:layout_height="35dp" />
                    />
                <TextView
                    android:id="@+id/user_detail_roleid"
                    android:textSize="18sp"
                    android:textColor="@color/text_color_black"
                    android:layout_marginTop="5dp"
                    android:layout_weight="4"
                    android:textStyle="bold"
                    android:text="Role Name not found"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="35dp">
                <ImageView
                   android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_active_run_40"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content" />
                <TextView
                    android:id="@+id/user_detail_statusid"
                    android:textSize="18sp"
                    android:textColor="@color/text_color_black"
                    android:text="Status not found"
                    android:textStyle="bold"
                    android:layout_marginLeft="10dp"
                    android:layout_weight="4"
                    android:layout_marginTop="5dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_location_on_60"
                    android:layout_width="0dp"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/user_detail_addressid"
                    android:textSize="18sp"
                    android:layout_weight="4"
                    android:textColor="@color/text_color_black"
                    android:text="address not found"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_phone_40"
                    android:layout_width="0dp"
                    android:layout_height="35dp" />

                <TextView
                   android:id="@+id/user_detail_phoneid"
                    android:textSize="18sp"
                    android:layout_weight="4"
                    android:textColor="@color/text_color_black"
                    android:text="phone not found"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_mail_outline_40"
                    android:layout_width="0dp"
                    android:layout_height="35dp" />

                <TextView
                   android:id="@+id/user_detail_emailid"
                    android:textSize="18sp"
                    android:layout_weight="4"
                    android:textColor="@color/text_color_black"
                    android:text="email not found"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_layers_40"
                    android:layout_width="0dp"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/user_detail_levelid"
                    android:textSize="18sp"
                    android:layout_weight="4"
                    android:textColor="@color/text_color_black"
                    android:text="level not found"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_calendar_today_40"
                    android:layout_width="0dp"
                    android:layout_height="35dp" />

                <TextView
                    android:id="@+id/user_detail_promossiondateid"
                    android:textSize="18sp"
                    android:layout_weight="4"
                    android:textColor="@color/text_color_black"
                    android:text="promossion date not found"
                    android:textStyle="bold"
                    android:layout_marginTop="5dp"
                    android:layout_marginLeft="10dp"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />



            </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>

</LinearLayout>