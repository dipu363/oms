<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/side_nav_bar"
    android:orientation="vertical"
    android:padding="15dp"
    android:theme="@style/ThemeOverlay.AppCompat.Dark">




    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:gravity="center"
        android:orientation="vertical">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
            <com.mikhaellopez.circularimageview.CircularImageView
                android:id="@+id/deshboardid"
                android:layout_width="75dp"
                android:layout_height="75dp"
                android:src="@drawable/logo"
                app:civ_border="true"
                android:layout_margin="5dp"
                app:civ_border_color="@color/white"
                app:civ_border_width="1dp"
                 />


            <TextView
                android:id="@+id/dashboard_comnameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="20sp"
                android:text="@string/company_name"
                android:layout_toRightOf="@+id/deshboardid"
                android:textColor="@color/DarkGreen"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="bold"
                android:layout_toEndOf="@+id/deshboardid" />
            <TextView
                android:id="@+id/dashboard_comadd"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/deshboardid"
                android:layout_below="@+id/dashboard_comnameid"
                android:textColor="@color/DarkGreen"
                android:text="@string/company_address1"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="italic"
                android:layout_toEndOf="@+id/deshboardid" />
            <TextView
                android:id="@+id/dashboard_compostid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/deshboardid"
                android:layout_below="@+id/dashboard_comadd"
                android:textColor="@color/DarkGreen"
                android:text="@string/company_address2"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="italic"
                android:layout_toEndOf="@+id/deshboardid" />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_toRightOf="@+id/deshboardid"
                android:layout_below="@+id/dashboard_compostid"
                android:textColor="@color/DarkGreen"
                android:text="@string/company_address3"
                android:textAppearance="?android:textAppearanceLarge"
                android:textStyle="italic"
                android:layout_toEndOf="@+id/deshboardid" />



        </RelativeLayout>

