<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".fragment.LogInFragment">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/app_background_dark_blue"
        android:padding="10dp">

        <TextView
            android:id="@+id/haveanaccid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="30dp"
            android:fontFamily="serif-monospace"
            android:gravity="center_horizontal"
            android:text="Welcome "
            android:textAlignment="center"
            android:textAllCaps="true"
            android:textColor="@color/text_color_white"
            android:textSize="32sp" />

        <TextView
            android:id="@+id/plealoinid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/haveanaccid"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif-monospace"
            android:text="Have an Account?"
            android:textColor="@color/text_color_white"
            android:textSize="24sp" />

        <TextView
            android:id="@+id/vgnupoinid"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/plealoinid"
            android:layout_centerHorizontal="true"
            android:fontFamily="serif-monospace"
            android:text="LogIn "
            android:textColor="@color/text_color_white"
            android:textSize="28sp"
            android:textStyle="bold" />
    </RelativeLayout>
    <View
        android:layout_width="match_parent"
        android:layout_height="100dp"
        android:background="@drawable/ic_background_header"
        android:orientation="vertical">
    </View>
    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical"
            android:paddingLeft="20dp"
            android:paddingRight="20dp">

            <EditText
                android:id="@+id/login_frag_emailedittextid"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="20dp"
                android:hint="Phone No"
                android:keepScreenOn="true"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <EditText
                android:id="@+id/login_frag_edtPassword"
                android:layout_width="match_parent"
                android:layout_height="60dp"
                android:layout_marginTop="14dp"
                android:hint="Password"
                android:inputType="textPassword"
                android:textColor="@color/black"
                android:textSize="20sp" />

            <ProgressBar
                android:id="@+id/login_frag_progress"
                style="?android:attr/progressBarStyle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:layout_marginBottom="10dp" />

            <com.google.android.material.floatingactionbutton.FloatingActionButton
                android:id="@+id/btn_login_frag"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="end"
                android:layout_marginEnd="30dp"
                android:layout_marginRight="30dp"
                android:layout_marginBottom="20dp"
                android:contentDescription="TODO"
                android:src="@drawable/ic__east_60"
                app:backgroundTint="@color/app_background_white"
                app:rippleColor="@color/app_background_dark_blue" />

            <Button
                android:id="@+id/btn_signup_login_frag"
                android:layout_width="match_parent"
                android:layout_height="36dp"
                android:layout_marginBottom="30dp"
                android:background="@drawable/edit_text_shape"
                android:text=" Registration From hare"
                android:textAllCaps="true"
                android:textColor="@color/text_color_black" />


        </LinearLayout>
    </ScrollView>
</LinearLayout>
