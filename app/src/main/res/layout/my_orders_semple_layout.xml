<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linear_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
                 <TextView
                     android:background="@drawable/serial_no_shap"
                     android:layout_centerVertical="true"
                     android:padding="5dp"
                     android:text="1"
                     android:textStyle="bold"
                     android:textColor="@color/white"
                     android:textSize="20sp"
                     android:id="@+id/my_orders_order_serialid"
                     android:layout_width="wrap_content"
                     android:layout_height="wrap_content" />
            <!--<ImageView
                android:id="@+id/productimageid"
                android:scaleType="fitXY"
                android:src="@drawable/fruits"
                android:layout_width="match_parent"
                android:layout_height="250dp" />-->


            <TextView
                android:id="@+id/order_sample_text1"
                android:textSize="20sp"
                android:textColor="@color/DarkGreen"
                android:text="Order ID :"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/my_orders_order_serialid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/my_orders_orderid"
                android:textSize="20sp"
                android:textColor="@color/DarkGreen"
                android:text="Apple Red"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/order_sample_text1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/order_sample_text1"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/order_sample_text2"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Order Date  :"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/order_sample_text1"
                android:layout_toRightOf="@+id/my_orders_order_serialid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/my_orders_order_date"
                android:textSize="16sp"
                android:textColor="@color/Black"
                android:text="24/02/2021"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/my_orders_orderid"
                android:layout_toRightOf="@+id/order_sample_text2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/order_sample_text2"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/order_sample_text3"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="Order Status :"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/order_sample_text2"
                android:layout_toRightOf="@+id/my_orders_order_serialid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/my_orders_order_status"
                android:textSize="16sp"
                android:textColor="@color/Green"
                android:text="Ordered"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/order_sample_text2"
                android:layout_toRightOf="@+id/order_sample_text3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/order_sample_text3"
                android:layout_marginStart="5dp" />


            <TextView
                android:id="@+id/my_orders_delivery_status"
                android:textSize="20sp"
                android:textColor="@color/DarkGreen"
                android:text="Delibered"
                android:layout_marginRight="30dp"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" />

            <TextView
                android:id="@+id/order_sample_text4"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:text="Shipping Address :"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/order_sample_text3"
                android:layout_toRightOf="@+id/my_orders_order_serialid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />
            <TextView
                android:id="@+id/my_orders_delivery_ship_add"
                android:textSize="14sp"
                android:textColor="@color/dark_gray"
                android:text="Shipping Address"
                android:layout_marginBottom="10dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/my_orders_order_status"
                android:layout_toRightOf="@+id/order_sample_text4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toEndOf="@+id/order_sample_text4"
                android:layout_marginStart="5dp" />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>