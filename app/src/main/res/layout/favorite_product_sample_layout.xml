<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linear_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/fav_prod_Imageid"
                android:layout_width="100dp"
                android:layout_height="100dp"
                android:layout_gravity="center_vertical"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/fruits" />

            <TextView
                android:id="@+id/fav_prod_nameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/fav_prod_Imageid"
                android:layout_toRightOf="@+id/fav_prod_Imageid"
                android:text="Apple Red"
                android:textColor="@color/text_color_green"
                android:textSize="18sp" />
            <TextView
                android:id="@+id/fav_prod_codeid"
                android:textSize="14sp"
                android:textColor="@color/text_color_black"
                android:text="Code  :"
                android:layout_toRightOf="@+id/fav_prod_Imageid"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/fav_prod_nameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/fav_prod_codeid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fav_prod_nameid"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/fav_prod_codeid"
                android:layout_toRightOf="@+id/fav_prod_codeid"
                android:text="Code"
                android:textColor="@color/text_color_black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/fav_prod_stockstatusid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fav_prod_codeid2"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/fav_prod_Imageid"
                android:layout_toRightOf="@+id/fav_prod_Imageid"
                android:textColor="@color/text_color_green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/fav_prod_Priceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/fav_prod_Imageid"
                android:padding="5dp"
                android:text="TK."
                android:textColor="@color/text_color_green"
                android:textSize="18sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/fav_prod_stockstatusid"
                android:layout_marginBottom="5dp"
                android:layout_toRightOf="@+id/fav_prod_Imageid"
                android:gravity="center"
                android:orientation="horizontal"
                android:layout_toEndOf="@+id/fav_prod_Imageid">
                <ImageButton
                    android:id="@+id/fab_btn_delete_Id"
                    android:layout_width="50dp"
                    android:layout_height="50dp"
                    android:background="@color/app_background_white"
                    android:foregroundGravity="center"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_delete_60" />

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="30dp">

                    <Button
                        android:id="@+id/fav_prod__add_to_cart_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit_button_shape"
                        android:text="Add to Cart"
                        android:textAllCaps="false"
                        android:textColor="@color/text_color_white"/>
                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>