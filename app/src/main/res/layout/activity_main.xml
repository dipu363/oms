<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".MainActivity">

        <FrameLayout
            android:layout_weight="1"
            android:id="@+id/main_activity_framlayout_id"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            />

        <com.etebarian.meowbottomnavigation.MeowBottomNavigation
            android:id="@+id/bottom_navigation_id"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:mbn_backgroundBottomColor="@color/app_background_dark_blue"
            app:mbn_circleColor="@color/app_background_white"
            app:mbn_countBackgroundColor="@color/text_color_gold"
            app:mbn_countTextColor="@color/app_background_white"
            app:mbn_defaultIconColor="@color/app_background_white"
            app:mbn_rippleColor="@color/app_background_dark_blue"
            app:mbn_selectedIconColor="@color/text_color_gold"

            >


        </com.etebarian.meowbottomnavigation.MeowBottomNavigation>


</LinearLayout>