<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">


    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:orientation="vertical">

        <RelativeLayout
            android:id="@+id/linear_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/prodListView_productImageid"
                android:layout_width="150dp"
                android:layout_height="150dp"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:scaleType="fitXY"
                android:src="@drawable/fruits" />

            <TextView
                android:id="@+id/cardproductnameid"
                android:textSize="18sp"
                android:textColor="@color/text_color_green"
                android:text="Apple Red"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/prodListView_productImageid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/prodListView_productImageid" />
            <TextView
                android:id="@+id/productcodeid"
                android:textSize="14sp"
                android:textColor="@color/text_color_black"
                android:text="Code  :"
                android:layout_toRightOf="@+id/prodListView_productImageid"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/cardproductnameid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp" />

            <TextView
                android:id="@+id/productcodeid2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardproductnameid"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/productcodeid"
                android:layout_toRightOf="@+id/productcodeid"
                android:text="Code"
                android:textColor="@color/text_color_black"
                android:textSize="14sp" />


            <TextView
                android:id="@+id/stockstatusid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/productcodeid2"
                android:layout_marginStart="5dp"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toEndOf="@+id/prodListView_productImageid"
                android:layout_toRightOf="@+id/prodListView_productImageid"
                android:textColor="@color/text_color_green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/prodPriceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/cardproductnameid"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:text="RM."
                android:textColor="@color/text_color_green"
                android:textSize="24sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/stockstatusid"
                android:layout_marginBottom="5dp"
                android:layout_marginTop="20dp"
                android:layout_toRightOf="@+id/prodListView_productImageid"
                android:gravity="center_horizontal"
                android:orientation="horizontal">

                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <ImageButton
                        android:id="@+id/productFavouritebottonId"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@color/app_background_white"
                        android:foregroundGravity="center"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_favorite_botton_40" />
                </FrameLayout>


                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp"
                    android:layout_marginLeft="30dp">

                    <Button
                        android:id="@+id/p_list_view_add_to_cart_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit_button_shape"
                        android:text="Add to cart"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_white"
                        android:visibility="visible" />

                    <Button
                        android:id="@+id/p_list_view_remove_cart_prod_id"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit_button_shape"
                        android:text="remove cart"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_white"
                        android:visibility="invisible" />
                </FrameLayout>

            </LinearLayout>

        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>