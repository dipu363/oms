<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    app:cardUseCompatPadding="false"
    app:cardElevation="50dp"
    xmlns:tools="http://schemas.android.com/tools">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="60dp"
        android:background="?selectableItemBackground"
        android:weightSum="10"
        android:orientation="horizontal">


        <LinearLayout
            android:id="@+id/product_container"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_weight="7"
            android:gravity="center"
            android:background="?selectableItemBackground"
            android:orientation="horizontal"
            android:weightSum="10">


       <!--     <ImageView
                android:id="@+id/product_image"
                android:src="@drawable/fruits"
                android:layout_width="0dp"
                android:layout_height="60dp"
                android:layout_weight="2.2"
                android:layout_gravity="center"
                android:adjustViewBounds="true"
                android:cropToPadding="true"
                android:paddingLeft="5dp"
                android:paddingRight="3dp"
                android:scaleType="fitXY" />-->

            <TextView
                android:id="@+id/cartserialid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:singleLine="true"
                android:layout_weight=".5"
                android:textAlignment="center"
                android:layout_marginRight="5dp"
                android:maxLines="1"
                android:textColor="@color/black"
                android:text="1"
                android:textSize="16sp"
                android:layout_marginEnd="5dp"
                android:gravity="center_horizontal" />


            <TextView
                android:id="@+id/cartproducttextid"
                android:layout_width="0dp"
                android:textSize="16sp"
                android:text="apple"
                android:maxLines="2"
                android:layout_marginEnd="5dp"
                android:layout_marginLeft="3dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:layout_weight="7"
                android:textColor="@color/text_color_green"
                android:layout_marginStart="3dp"
                tools:ignore="NestedWeights"
                android:layout_marginRight="5dp" />

            <TextView
                android:id="@+id/cartprodpriceid"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/black"
                android:layout_weight="2.5"
                android:paddingLeft="10dp"
                android:gravity="left"
                android:text="0.0"
                tools:ignore="RtlHardcoded" />




        </LinearLayout>



        <LinearLayout
            android:orientation="vertical"
            android:layout_height="match_parent"
            android:weightSum="2"
            android:layout_weight="3"
            android:gravity="end"
            android:layout_width="0dp">

            <LinearLayout
                android:layout_weight="2"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="0dp">
                <ImageButton
                    android:id="@+id/btn_decrease"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="3.3"
                    android:layout_gravity="center"
                    android:background="@color/app_background_white"
                    android:src="@drawable/ic_remove_24"
                    tools:ignore="NestedWeights" />

                <EditText
                    android:id="@+id/cartproduct_qty"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3.4"
                    android:hint="0"
                    android:textColor="@color/black"
                    android:inputType="numberSigned"

                    />

                <ImageButton
                    android:id="@+id/btn_increase"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center"
                    android:layout_weight="3.3"
                    android:background="@color/app_background_white"
                    android:src="@drawable/ic_add_24" />





            </LinearLayout>


           <!-- <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:gravity="center">

                <ImageButton
                    android:id="@+id/itemdeletebtnid"
                    android:background="@color/white"
                    android:src="@drawable/ic_baseline_delete_24"
                    android:layout_width="40dp"
                    android:layout_height="38dp"/>

            </LinearLayout>-->

        </LinearLayout>

    </LinearLayout>


</androidx.cardview.widget.CardView>