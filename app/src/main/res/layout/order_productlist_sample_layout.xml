<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:id="@+id/sum_prod_sl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAlignment="center"
        android:layout_marginRight="5dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:text="1"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginEnd="5dp" />
    <TextView
        android:id="@+id/sum_prod_name_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sum_prod_sl_id"
        android:maxLines="2"
        android:textColor="@color/DarkGreen"
        android:text="Medium Text"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/sum_prod_sl_id" />
    <TextView
        android:id="@+id/sum_prod_qty_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/sum_prod_rate_id"
        android:textColor="@color/black"
        android:textSize="16sp"
        android:text="QTY "
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/sum_prod_rate_id"
        android:gravity="end" />

    <TextView
        android:id="@+id/sum_prod_rate_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        android:layout_toLeftOf="@+id/sum_total_price_id"
        android:textColor="@color/black"
        android:text="0.0"
        android:layout_marginEnd="10dp"
        android:layout_toStartOf="@+id/sum_total_price_id"
        android:gravity="end" />
    <TextView
        android:id="@+id/sum_total_price_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:layout_marginRight="5dp"
        android:layout_alignParentRight="true"
        android:textColor="@color/black"
        android:text="0.0"
        android:layout_marginEnd="5dp"
        android:layout_alignParentEnd="true"
        android:gravity="center" />
    <TextView
        android:id="@+id/sum_prod_code_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prodid"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/sum_prod_sl_id"
        android:layout_below="@+id/sum_prod_name_id"
        android:layout_toEndOf="@+id/sum_prod_sl_id" />




</RelativeLayout>