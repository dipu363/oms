<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:gravity="center"
    android:padding="5dp"
    android:descendantFocusability="blocksDescendants">

    <TextView
        android:id="@+id/sum_prod_sl_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:padding="3dp"
        android:text="1"
        android:textAlignment="center"
        android:textColor="@color/text_color_black"
        android:textSize="20sp"
        android:textStyle="bold" />
    <TextView
        android:id="@+id/sum_prod_name_id"
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/sum_prod_sl_id"
        android:maxLines="2"
        android:layout_marginLeft="5dp"
        android:textColor="@color/text_color_green"
        android:text="Medium Text"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/sum_prod_sl_id" />



    <LinearLayout

        android:weightSum="3"
        android:orientation="horizontal"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true">

        <TextView
            android:id="@+id/sum_prod_qty_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:textAlignment="center"
            android:textColor="@color/text_color_black"
            android:textSize="16sp"
            android:text="QTY "
            android:gravity="center" />

        <TextView
            android:id="@+id/sum_prod_rate_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:textSize="16sp"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"
            android:text="0.0"
            android:gravity="center" />
        <TextView
            android:id="@+id/sum_total_price_id"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            android:textAlignment="textEnd"
            android:layout_weight="1"
            android:textColor="@color/text_color_black"
            android:text="0.0"
            android:gravity="end" />




    </LinearLayout>

    <TextView
        android:id="@+id/sum_prod_code_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="5dp"
        android:text="prodid"
        android:textSize="12sp"
        android:layout_toRightOf="@+id/sum_prod_sl_id"
        android:layout_below="@+id/sum_prod_name_id"
        android:layout_toEndOf="@+id/sum_prod_sl_id" />




</RelativeLayout>