<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/screen_background_light_transparent"
    tools:context=".fragment.ProfileFragment">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:layout_margin="20dp"
        android:padding="20dp"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/linear_view"
            android:background="@color/white"
            android:layout_margin="5dp"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:gravity="center_horizontal"
            android:orientation="vertical">
            <FrameLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:id="@+id/profile_image_id"
                    android:scaleType="fitXY"
                    android:layout_gravity="center"
                    android:src="@drawable/userphoto"
                    android:layout_marginTop="20dp"
                    android:layout_marginBottom="10dp"
                    android:layout_width="150dp"
                    android:layout_height="150dp" />
                <ImageButton
                    android:id="@+id/cartbuttonid"
                    android:backgroundTint="@color/white"
                    android:layout_gravity="right"
                    android:scaleType="fitXY"
                    android:src="@drawable/ic_baseline_edit_24"
                    android:layout_width="60dp"
                    android:layout_height="60dp"/>


            </FrameLayout>



            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:layout_marginBottom="10dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <TextView
                    android:id="@+id/profile_userfnameid"
                    android:textSize="36sp"
                    android:textColor="@color/DarkGreen"
                    android:text="Giyas"
                    android:textStyle="bold"
                    android:layout_marginRight="2.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="2.5dp" />
                <TextView
                    android:id="@+id/profile_userlnameid"
                    android:textSize="32sp"
                    android:textColor="@color/DarkGreen"
                    android:text="Uddin"
                    android:textStyle="bold"
                    android:layout_marginLeft="2.5dp"
                    android:layout_marginTop="5dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="2.5dp" />
            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_person_outline_40"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

                <TextView
                    android:layout_weight="4"
                    android:id="@+id/profile_usernameid"
                    android:textSize="20sp"
                    android:textColor="@color/Black"
                    android:textStyle="bold"
                    android:text="User Name"
                    android:layout_width="0dp"
                    android:layout_height="match_parent" />
            </LinearLayout>
            <LinearLayout
                android:weightSum="5"
            android:orientation="horizontal"
            android:gravity="center"
            android:layout_width="match_parent"
            android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_task_alt_40"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

            <TextView
                android:id="@+id/profile_roleid"
                android:textSize="20sp"
                android:textColor="@color/Black"
                android:layout_weight="4"
                android:textStyle="bold"
                android:text="Role Name"
                android:layout_width="0dp"
                android:layout_height="match_parent" />



            </LinearLayout>

            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_person_outline_40"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

            <TextView
                android:id="@+id/profile_referenceid"
                android:textSize="20sp"
                android:textColor="@color/Black"
                android:text="Reference By"
                android:textStyle="bold"
                android:layout_weight="4"
                android:layout_width="0dp"
                android:layout_height="match_parent" />



            </LinearLayout>
            <LinearLayout
                android:orientation="horizontal"
                android:gravity="center"
                android:weightSum="5"
                android:layout_marginBottom="20dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_weight="1"
                    android:layout_gravity="center"
                    android:src="@drawable/ic_baseline_active_run_40"
                    android:layout_width="0dp"
                    android:layout_height="30dp" />

            <TextView
                android:id="@+id/profile_statusid"
                android:textSize="20dp"
                android:layout_weight="4"
                android:textColor="@color/Black"
                android:text="Status"
                android:textStyle="bold"
                android:layout_width="0dp"
                android:layout_height="match_parent" />
             </LinearLayout>
        </LinearLayout>
    </androidx.cardview.widget.CardView>




</LinearLayout>