<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:elevation="50dp"
        android:layout_margin="3dp"
        android:padding="10dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:id="@+id/linear_view"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:layout_marginLeft="5dp"
            android:orientation="vertical">
            <ImageView
                android:id="@+id/emageid"
                android:layout_centerVertical="true"
                android:layout_alignParentLeft="true"
                android:src="@drawable/ic_baseline_west_40"
                android:layout_width="24dp"
                android:layout_height="24dp"/>



            <TextView
                android:id="@+id/trhis_textviewid1"
                android:textSize="20dp"
                android:textColor="@color/DarkGreen"
                android:text="Transaction ID"
                android:layout_marginLeft="5dp"
                android:layout_marginTop="5dp"
                android:layout_toRightOf="@+id/emageid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="5dp"
                android:layout_toEndOf="@+id/emageid" />
            <TextView
                android:id="@+id/his_transaction_id"
                android:textSize="18sp"
                android:textColor="@color/black"
                android:text="123456789 "
                android:layout_toRightOf="@+id/emageid"
                android:layout_marginLeft="10dp"
                android:layout_below="@id/trhis_textviewid1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginStart="10dp"
                android:layout_toEndOf="@+id/emageid" />

            <TextView
                android:id="@+id/tr_his_amount_id"
                android:textSize="18sp"
                android:textColor="@color/red"
                android:text="RM 5000"
                android:layout_alignParentRight="true"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentEnd="true"
                android:layout_marginEnd="20dp" />
            <TextView
                android:id="@+id/tr_his_date_id"
                android:textSize="16sp"
                android:textColor="@color/black"
                android:text="00-00-0000"
                android:layout_marginRight="20dp"
                android:layout_marginTop="5dp"
                android:layout_below="@id/tr_his_amount_id"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="5dp"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="20dp"
                android:layout_alignParentEnd="true" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>