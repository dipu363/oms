<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".product.Product_Details_view_Activity">

    <androidx.cardview.widget.CardView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <ImageView
                    android:id="@+id/productimageid"
                    android:layout_width="match_parent"
                    android:layout_height="400dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fruits" />

                <TextView
                    android:id="@+id/cardproductnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:padding="5dp"
                    android:layout_gravity="start"
                    android:textStyle="bold"
                    android:text=" Rad Apple 100"
                    android:textColor="@color/text_color_green"
                    android:textSize="20sp"
                     />




            </LinearLayout>
            <LinearLayout
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <RelativeLayout
                    android:id="@+id/linear_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:padding="10dp">


                    <TextView
                        android:id="@+id/cardproductinStockid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Stock Available"
                        android:textColor="@color/text_color_green"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cardproductcodeCodeid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardproductinStockid"
                        android:text="500gm"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cardproductpriceid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:padding="5dp"
                        android:text="TK. 500.00"
                        android:textColor="@color/text_color_green"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/cardproductdetailsid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardproductpriceid"
                        android:layout_marginTop="5dp"
                        android:text="details Apple Red this is the red apple this is the ted apple erp system is the path"
                        android:textColor="@color/text_color_black"
                        android:textSize="14sp" />

                </RelativeLayout>


            </LinearLayout>

            <LinearLayout
                android:gravity="center_horizontal"
                android:orientation="horizontal"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <FrameLayout
                    android:layout_marginRight="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="30dp">

                    <ImageButton
                        android:id="@+id/productfeedbackbottonId"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/app_background_white"
                        android:foregroundGravity="center"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_feedback_40" />
                </FrameLayout>
                <FrameLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <ImageButton
                        android:id="@+id/productFavouritebottonId"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:background="@color/app_background_white"
                        android:foregroundGravity="center"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_favorite_botton_40" />
                </FrameLayout>



                <FrameLayout
                    android:layout_gravity="center_vertical"
                   android:layout_marginLeft="30dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="20dp">

                    <Button
                        android:id="@+id/add_to_cart_id"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit_button_shape"
                        android:text="Add to cart"
                        android:textAllCaps="true"
                        android:visibility="visible"
                        android:textColor="@color/text_color_white" />

                    <Button
                        android:id="@+id/remove_cart_prod_id"
                        android:layout_width="150dp"
                        android:layout_height="wrap_content"
                        android:background="@drawable/submit_button_shape"
                        android:text="remove cart"
                        android:textAllCaps="true"
                        android:textColor="@color/text_color_white"
                        android:visibility="invisible" />
                </FrameLayout>

            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</ScrollView>