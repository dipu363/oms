<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="8dp"
    tools:context=".product.Product_Details_view_Activity">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp"
        android:orientation="vertical">


        <LinearLayout
            android:weightSum="2"
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_weight="1"
                android:gravity="center"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <ImageView
                    android:id="@+id/productimageid"
                    android:layout_width="300dp"
                    android:layout_height="300dp"
                    android:scaleType="fitXY"
                    android:src="@drawable/fruits" />
                <TextView
                    android:id="@+id/cardproductnameid"
                    android:layout_width="wrap_content"
                    android:layout_height="60dp"
                    android:padding="5dp"
                    android:textAlignment="center"
                    android:text=" product detailsApple Red this is the red apple this is the ted apple erp system is the path  product detailsApple Red this is the red apple this is the ted apple erp system is the path"
                    android:textColor="@color/text_color_green"
                    android:textSize="20sp"
                    android:gravity="center_horizontal" />




            </LinearLayout>
            <LinearLayout
                android:layout_weight="1"
                android:orientation="vertical"
                android:layout_width="match_parent"
                android:layout_height="0dp">

                <RelativeLayout
                    android:padding="10dp"
                    android:id="@+id/linear_view"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">


                    <TextView
                        android:id="@+id/cardproductinStockid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:padding="5dp"
                        android:text="Stock Available"
                        android:textColor="@color/text_color_green"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cardproductUMLcodeid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_toRightOf="@+id/cardproductinStockid"
                        android:padding="5dp"
                        android:text="500gm"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <TextView
                        android:id="@+id/cardproductpriceid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_alignParentTop="true"
                        android:layout_alignParentRight="true"
                        android:padding="5dp"
                        android:text="TK. 500.00"
                        android:textColor="@color/text_color_green"
                        android:textSize="24sp" />

                    <TextView
                        android:id="@+id/cardproductdetailsid"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_below="@+id/cardproductpriceid"
                        android:padding="5dp"
                        android:text="details Apple Red this is the red apple this is the ted apple erp system is the path"
                        android:textColor="@color/black"
                        android:textSize="14sp" />

                    <ImageButton
                        android:id="@+id/cardproductAddtTocartbottonId"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentRight="true"
                        android:layout_alignParentBottom="true"
                        android:background="@color/app_background_white"
                        android:foregroundGravity="center"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_add_shopping_cart_black_24dp"
                        android:layout_alignParentEnd="true" />
                    <ImageButton
                        android:id="@+id/productFavouritebottonId"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:layout_centerHorizontal="true"
                        android:background="@color/app_background_white"
                        android:foregroundGravity="center"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_favorite_botton_40" />
                    <ImageButton
                        android:id="@+id/productfeedbackbottonId"
                        android:layout_width="60dp"
                        android:layout_height="60dp"
                        android:layout_alignParentBottom="true"
                        android:background="@color/app_background_white"
                        android:foregroundGravity="center"
                        android:padding="5dp"
                        android:scaleType="fitXY"
                        android:src="@drawable/ic_baseline_feedback_40" />


                </RelativeLayout>




            </LinearLayout>

        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>