<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:orientation="vertical">
    <androidx.cardview.widget.CardView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_margin="5dp"
        android:padding="10dp"
        card_view:cardCornerRadius="15dp"
        card_view:cardElevation="5dp"
        android:orientation="vertical">
        <RelativeLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <ImageView
                android:id="@+id/productimageid"
                android:layout_width="200dp"
                android:layout_height="200dp"
                android:layout_alignParentTop="true"
                android:layout_centerInParent="true"
                android:scaleType="fitXY"
                android:src="@drawable/fruits" />

            <TextView
                android:id="@+id/cardproductnameid"
                android:layout_width="wrap_content"
                android:layout_height="60dp"
                android:layout_below="@+id/productimageid"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginTop="1dp"
                android:text="productname"
                android:textColor="@color/text_color_green"
                android:textSize="16sp" />

            <TextView
                android:id="@+id/cardproductUMLcodeid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardproductnameid"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:text="500gm"
                android:textColor="@color/black"
                android:textSize="12sp" />

            <TextView
                android:id="@+id/cardproductpriceid"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/cardproductUMLcodeid"
                android:layout_marginStart="10dp"
                android:layout_marginLeft="10dp"
                android:layout_marginBottom="10dp"
                android:text="TK. 500.00"
                android:textColor="@color/app_background_dark_blue"
                android:textSize="14sp" />
        </RelativeLayout>
    </androidx.cardview.widget.CardView>
</LinearLayout>