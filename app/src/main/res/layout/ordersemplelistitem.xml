<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="60dp"
    android:gravity="center"
    android:descendantFocusability="blocksDescendants">
    <TextView
        android:id="@+id/prodserialid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:singleLine="true"
        android:ellipsize="end"
        android:textAlignment="center"
        android:layout_marginRight="5dp"
        android:maxLines="1"
        android:textColor="@color/black"
        android:text="1"
        android:textSize="16sp"
        android:gravity="center"
        android:layout_marginEnd="5dp" />
    <TextView
        android:id="@+id/order_product_name_id"
        android:layout_width="200dp"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/prodserialid"
        android:maxLines="2"
        android:textColor="@color/DarkGreen"
        android:text="Medium Text"
        android:textSize="16sp"
        android:layout_toEndOf="@+id/prodserialid" />


    <TextView
        android:id="@+id/order_prod_rate_id"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textAlignment="textEnd"
        android:textSize="16sp"
        android:layout_marginRight="10dp"
        android:layout_toRightOf="@+id/order_product_name_id"
        android:textColor="@color/black"
        android:text="0.0"
        android:layout_marginEnd="10dp"
        android:gravity="end"
        android:layout_toEndOf="@+id/order_product_name_id" />

    <TextView
        android:id="@+id/order_prod_codeid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="prodid"
        android:textSize="12sp"
        android:visibility="invisible"
        android:layout_toRightOf="@+id/prodserialid"
        android:layout_below="@+id/order_product_name_id"
        android:layout_toEndOf="@+id/prodserialid" />

    <CheckBox
        android:id="@+id/prodlistchackboxid"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:clickable="false"
        android:layout_alignBaseline="@+id/order_product_name_id"
        android:layout_alignParentRight="true"
        android:focusable="false"
        android:focusableInTouchMode="false"
        android:layout_alignParentEnd="true" />




</RelativeLayout>




