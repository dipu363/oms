                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/ordertotalamount_linearid"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/cus_phone_linearid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/orderinvoicetextid10"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="Order Total(RM)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/order_invoice_ordertotalid"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="0.0"
                        android:layout_alignParentRight="true"
                        android:textAlignment="textEnd"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </RelativeLayout>
            </LinearLayout>
            <LinearLayout
                android:id="@+id/delivercharge_linearid"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/ordertotalamount_linearid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/orderinvoicetextid11"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="Delivery Charge(RM)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/order_invoice_delivarichrgeid"
                        android:textSize="18sp"
                        android:textColor="@color/black"
                        android:text="0.0"
                        android:layout_alignParentRight="true"
                        android:textAlignment="textEnd"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </RelativeLayout>
            </LinearLayout>

            <LinearLayout
                android:id="@+id/total_amount_linearid"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_below="@+id/delivercharge_linearid"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

            <EditText
                android:background="@color/black"
                android:layout_width="match_parent"
                android:layout_height="1dp"/>
                <RelativeLayout
                    android:padding="10dp"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">
                    <TextView
                        android:id="@+id/orderinvoicetextid12"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="Total Amount(RM)"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content" />

                    <TextView
                        android:id="@+id/order_invoice_totalamountid"
                        android:textSize="20sp"
                        android:textColor="@color/black"
                        android:text="0.0"
                        android:layout_alignParentRight="true"
                        android:textAlignment="textEnd"
                        android:layout_width="230dp"
                        android:layout_height="wrap_content"
                        android:gravity="end" />
                </RelativeLayout>
                <EditText
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
                <EditText
                    android:id="@+id/edittexid"
                    android:layout_marginTop="3dp"
                    android:layout_marginBottom="3dp"
                    android:background="@color/black"
                    android:layout_width="match_parent"
                    android:layout_height="1dp"/>
            </LinearLayout>

            <LinearLayout
                android:layout_below="@+id/total_amount_linearid"
                android:orientation="vertical"
                android:gravity="center"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">

                <TextView
                    android:background="@drawable/edit_text_shape"
                    android:padding="10dp"
                    android:textSize="12sp"
                    android:layout_marginBottom="20dp"
                    android:textColor="@color/black"
                    android:text="NOTE:- This is a computer generated receipt and does note require a signature."
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content" />


            </LinearLayout>



